<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rl_rml_layer1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp">
        <TextView
            android:id="@+id/txtRecordDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="2019年10月"/>
        <TextView
            android:id="@+id/txtTotalCostInADay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="0.00"/>

        <TextView
            android:id="@+id/ui_total_cost_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/txtTotalCostInADay"
            android:layout_marginEnd="5dp"
            android:text="@string/cost"/>
        <TextView
            android:id="@+id/txtTotalIncomeInADay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/ui_total_cost_day"
            android:layout_marginEnd="10dp"
            android:text="0.00"/>
        <TextView
            android:id="@+id/ui_total_income_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/income"
            android:layout_toStartOf="@+id/txtTotalIncomeInADay"
            android:layout_marginEnd="5dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_rml_layer2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_rml_layer1"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp">
        <com.chrisyoung.huajiangapp.view.MyListView
            android:id="@+id/recordItemListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </com.chrisyoung.huajiangapp.view.MyListView>
    </RelativeLayout>

</RelativeLayout>